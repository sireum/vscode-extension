    "tab.activeForeground": "#8B8B89",
    "tab.inactiveBackground": "#101010",
    "tab.inactiveForeground": "#8B8B89",
    "tab.hoverBackground": "#1E1E1E",
    "tab.border": "#191C1C",
    "tab.activeBorder": "#191C1C",
    "tab.activeBorderTop": "#191C1C",
    "tab.unfocusedActiveBorder": "#191B19",
    "tab.activeModifiedBorder": "#E0DED2",
    "tab.inactiveModifiedBorder": "#E0DED2",
    "tab.unfocusedActiveModifiedBorder": "#191C1C",
    "tab.unfocusedInactiveModifiedBorder": "#191C1C",

    // Activity Bar & Side Bar
    "activityBar.background": "#111111",
    "activityBar.foreground": "#E0DED2",
    "activityBar.inactiveForeground": "#8E8F8C",
    "activityBarBadge.background": "#404040",
    "activityBarBadge.foreground": "#E0DED2",
    "activityBar.activeBorder": "#191C1C",
    "sideBar.background": "#111111",
    "sideBar.foreground": "#8B8B89",
    "sideBar.border": "#191C1C",
    "sideBarSectionHeader.background": "#111111",
    "sideBarSectionHeader.foreground": "#8E8F8C",
    "sideBarTitle.foreground": "#E0DED2",
    "tree.indentGuidesStroke": "#00000000",

    // Status & Title Bars
    "statusBar.background": "#111111",
    "statusBar.foreground": "#E0DED2",
    "statusBar.debuggingBackground": "#191C1C",
    "statusBar.debuggingForeground": "#E0DED2",
    "statusBar.noFolderBackground": "#111111",
    "statusBar.border": "#191C1C",
    "titleBar.activeBackground": "#111111",
    "titleBar.activeForeground": "#E0DED2",
    "titleBar.inactiveBackground": "#111111",
    "titleBar.inactiveForeground": "#8B8B89",
    "titleBar.border": "#191C1C",

    // Lists & Trees
    "list.activeSelectionBackground": "#262626",
    "list.activeSelectionForeground": "#E0DED2",
    "list.inactiveSelectionBackground": "#262626",
    "list.inactiveSelectionForeground": "#E0DED2",
    "list.hoverBackground": "#191B19",
    "list.dropBackground": "#191B19",
    "list.focusOutline": "#191C1C",
    "list.focusBackground": "#191B19",
    "list.highlightForeground": "#9CC6E6",
    "list.errorForeground": "#FF8C8C",
    "list.warningForeground": "#6BC1F7",

    // Inputs, Dropdowns & Buttons
    "input.background": "#111111",
    "input.foreground": "#E0DED2",
    "input.border": "#191C1C",
    "input.placeholderForeground": "#8E8F8C",
    "inputOption.activeBorder": "#191C1C",
    "dropdown.background": "#111111",
    "dropdown.border": "#191C1C",
    "dropdown.foreground": "#E0DED2",
    "button.background": "#2A2A2A",
    "button.foreground": "#EAE8DD",
    "button.hoverBackground": "#363636",
    "checkbox.background": "#111111",
    "checkbox.border": "#191C1C",
    "quickInput.background": "#111111",
    "quickInput.foreground": "#E0DED2",
    "quickInputList.focusBackground": "#191B19",
    "quickInputList.focusForeground": "#E0DED2",

    // Notifications & Progress
    "notificationCenter.border": "#191C1C",
    "notifications.background": "#111111",
    "notifications.foreground": "#E0DED2",
    "notifications.border": "#191C1C",
    "notificationLink.foreground": "#9CC6E6",
    "progressBar.background": "#191C1C",

    // Breadcrumbs & Peek
    "breadcrumb.foreground": "#8B8B89",
    "breadcrumb.focusForeground": "#E0DED2",
    "breadcrumb.activeSelectionForeground": "#E0DED2",
    "breadcrumb.background": "#111111",
    "peekView.border": "#191C1C",
    "peekViewEditor.background": "#191B191A",
    "peekViewEditorGutter.background": "#191B191A",
    "peekViewResult.background": "#111111",
    "peekViewTitle.background": "#111111",
    "peekViewEditor.matchHighlightBackground": "#E0DED21A",
    "peekViewResult.matchHighlightBackground": "#E0DED21A",

    // Hover & Suggestions
    "editorHoverWidget.background": "#111111",
    "editorHoverWidget.border": "#191C1C",
    "editorSuggestWidget.background": "#111111",
    "editorSuggestWidget.border": "#191C1C",
    "editorSuggestWidget.foreground": "#E0DED2",
    "editorSuggestWidget.highlightForeground": "#9CC6E6",
    "editorSuggestWidget.selectedBackground": "#1C1C1C",
    "editorSuggestWidget.selectedForeground": "#E0DED2",
    "editorStickyScroll.background": "#111111",
    "editorStickyScroll.border": "#191C1C",
    "editorStickyScrollHover.background": "#161616",
    "editorWidget.background": "#111111",
    "editorWidget.border": "#191C1C",

    // Inlay hints
    "editorInlayHint.background": "#191919",
    "editorInlayHint.foreground": "#A6A7A1",
    "editorInlayHint.typeBackground": "#191919",
    "editorInlayHint.typeForeground": "#A6A7A1",
    "editorInlayHint.parameterBackground": "#191919",
    "editorInlayHint.parameterForeground": "#B8B9B3",

    // Find/Match
    "editor.findMatchBackground": "#CC604499",
    "editor.findMatchHighlightBackground": "#A7A59640",
    "editor.findRangeHighlightBackground": "#00000000",
    "editor.rangeHighlightBackground": "#00000000",
    "editor.rangeHighlightBorder": "#00000000",
    "editor.findMatchBorder": "#00000000",

    // Scrollbars & Minimap
    "scrollbarSlider.background": "#191C1CAA",
    "scrollbarSlider.hoverBackground": "#191B19AA",
    "scrollbarSlider.activeBackground": "#26262680",
    "minimap.findMatchHighlight": "#E0DED280",
    "minimap.selectionHighlight": "#26262680",
    "minimap.errorHighlight": "#FF8C8C80",
    "minimap.warningHighlight": "#6BC1F780",
    "minimapGutter.addedBackground": "#8AC88A",
    "minimapGutter.modifiedBackground": "#5E7F95",
    "minimapGutter.deletedBackground": "#FF8C8C",

    // Terminal
    "terminal.background": "#111111",
    "terminal.foreground": "#E0DED2",
    "terminal.ansiBlack": "#111111",
    "terminal.ansiRed": "#FF8C8C",
    "terminal.ansiGreen": "#8AC88A",
    "terminal.ansiYellow": "#6BC1F7",
    "terminal.ansiBlue": "#8899C9",
    "terminal.ansiMagenta": "#B79ED9",
    "terminal.ansiCyan": "#6ACFF6",
    "terminal.ansiWhite": "#E0DED2",
    "terminal.ansiBrightBlack": "#707070",
    "terminal.ansiBrightRed": "#FFAAAA",
    "terminal.ansiBrightGreen": "#9AD89A",
    "terminal.ansiBrightYellow": "#7BC5F4",
    "terminal.ansiBrightBlue": "#9CC6E6",
    "terminal.ansiBrightMagenta": "#C8AEEC",
    "terminal.ansiBrightCyan": "#7ADFFF",
    "terminal.ansiBrightWhite": "#E4E2D5",
    "terminal.selectionBackground": "#262626",

    // Badges & Accents
    "badge.background": "#191C1C",
    "badge.foreground": "#E0DED2",

    // Menus
    "menu.background": "#111111",
    "menu.foreground": "#E0DED2",
    "menu.selectionBackground": "#191B19",
    "menu.selectionForeground": "#E0DED2",
    "menu.separatorBackground": "#191C1C",

    // Git Decorations
    "gitDecoration.addedResourceForeground": "#8AC88A",
    "gitDecoration.modifiedResourceForeground": "#9CC6E6",
    "gitDecoration.deletedResourceForeground": "#FF8C8C",
    "gitDecoration.untrackedResourceForeground": "#8AC88A",
    "gitDecoration.ignoredResourceForeground": "#5A5A5A",
    "gitDecoration.conflictingResourceForeground": "#6BC1F7",

    // Testing
    "testing.iconPassed": "#8AC88A",
    "testing.iconFailed": "#FF8C8C",
    "testing.iconQueued": "#6BC1F7",
    "testing.iconSkipped": "#8B8B89",

    // Welcome / Misc
    "welcomePage.background": "#111111",
    "welcomePage.progress.background": "#191C1C",
    "welcomePage.progress.foreground": "#191C1C"
  },

  "semanticTokenColors": {
    "variable": "#E0DED2",
    "parameter": "#E0DED2",
    "property": "#96BDBD",
    "property.declaration": "#96BDBD",
    "type": "#96BDBD",
    "typeParameter": "#96BDBD",
    "function": "#A7D8EE",
    "method": "#A7D8EE",
    "class": "#B490AC",
    "interface": "#B490AC",
    "enum": "#B490AC",
    "enumMember": "#B490AC",
    "namespace": "#B490AC",
    "decorator": "#B490AC",
    "event": "#9CC6E6",
    "regexp": "#6ACFF6",
    "string": "#8AC88A",
    "number": "#6BC1F7",
    "boolean": "#7BC5F4",
    "keyword": "#8899C9",
    "comment": "#7A7B76",
    "operator": "#E0DED2",
    "macro": "#A7D8EE",
    "label": "#E0DED2",
    "variable.readonly": "#E0DED2",
    "property.readonly": "#96BDBD",
    "function.declaration": "#A7D8EE",
    "method.declaration": "#A7D8EE",
    "class.declaration": "#B490AC",
    "type.declaration": "#96BDBD",
    "parameter.declaration": "#E0DED2",
    "variable.declaration": "#E0DED2"
  },

  "tokenColors": [
    {
      "name": "Declarations, Storage, Control",
      "scope": [
        "storage.modifier",
        "keyword.declaration",
        "keyword.other",
        "keyword.control"
      ],
      "settings": { "foreground": "#8899C9", "fontStyle": "bold" }
    },

    {
      "name": "Functions, Methods",
      "scope": [
        "entity.name.function",
        "meta.function-call",
        "support.function"
      ],
      "settings": { "foreground": "#A7D8EE" }
    },

    {
      "name": "Variables",
      "scope": [
        "variable.other",
        "variable.other.readwrite",
        "variable.other.object",
        "variable.other.constant",
        "meta.definition.variable variable.other",
        "meta.variable.declaration variable.other",
        "meta.variable.assignment variable.other"
      ],
      "settings": { "foreground": "#E0DED2" }
    },

    {
      "name": "Classes, Types, Decorators, Annotations",
      "scope": [
        "variable.language.this",
        "variable.language.super",
        "variable.language.self",
        "keyword.operator.new",
        "keyword.other.new",
        "keyword.control.new",
        "storage.type.new",
        "entity.name.type.interface",
        "entity.name.type.enum",
        "entity.name.type",
        "support.class",
        "entity.name.function.decorator",
        "storage.type.annotation",
        "punctuation.definition.decorator",
        "punctuation.definition.annotation",
        "meta.annotation.identifier",
        "meta.decorator variable.other.readwrite",
        "meta.decorator entity.name.function",
        "meta.function.decorator entity.name.function",
        "meta.function.decorator.python entity.name.function"
      ],
      "settings": { "foreground": "#B490AC" }
    },

    {
      "name": "Type Annotations",
      "scope": [
        "meta.type",
        "meta.type.annotation",
        "meta.type.declaration",
        "meta.return.type",
        "meta.type entity.name.type",
        "meta.type.annotation entity.name.type",
        "support.type",
        "support.type.primitive",
        "support.type.builtin",
        "storage.type"
      ],
      "settings": { "foreground": "#96BDBD" }
    },

    {
      "name": "Strings",
      "scope": ["string", "markup.inline.raw"],
      "settings": { "foreground": "#8AC88A" }
    },

    {
      "name": "Numbers, Constants",
      "scope": [
        "constant.numeric",
        "constant.language",
        "support.constant",
        "constant.character",
        "keyword.other.unit"
      ],
      "settings": { "foreground": "#6BC1F7" }
    },

    {
      "name": "Booleans, Null",
      "scope": [
        "constant.language.boolean",
        "constant.language.null",
        "constant.language.undefined"
      ],
      "settings": { "foreground": "#7BC5F4" }
    },

    {
      "name": "Import, Export",
      "scope": [
        "keyword.control.import",
        "keyword.control.export",
        "keyword.control.from"
      ],
      "settings": { "foreground": "#9FBAD0" }
    },

    {
      "name": "Object, JSON, YAML",
      "scope": [
        "meta.object-literal.key",
        "support.type.property-name",
        "meta.structure.dictionary.json support.type.property-name.json",
        "entity.name.tag.yaml",
        "meta.key.yaml"
      ],
      "settings": { "foreground": "#E0DED2" }
    },

    {
      "name": "JSX/TSX Props",
      "scope": [
        "source.js.jsx entity.other.attribute-name",
        "source.jsx entity.other.attribute-name",
        "source.tsx entity.other.attribute-name",
        "meta.tag.jsx entity.other.attribute-name",
        "meta.tag.tsx entity.other.attribute-name",
        "meta.tag.attributes.jsx entity.other.attribute-name",
        "meta.tag.attributes.tsx entity.other.attribute-name"
      ],
      "settings": { "foreground": "#96BDBD" }
    },

    {
      "name": "HTML/CSS Tags",
      "scope": [
        "entity.name.tag",
        "entity.name.tag.css",
        "entity.other.attribute-name",
        "entity.other.attribute-name.id.css",
        "entity.other.attribute-name.class.css"
      ],
      "settings": { "foreground": "#8899C9" }
    },

    {
      "name": "Regex",
      "scope": [
        "string.regexp",
        "constant.character.escape",
        "string.regexp.group",
        "string.regexp.arbitrary-repetition"
      ],
      "settings": { "foreground": "#6ACFF6" }
    },

    {
      "name": "Invalid, Deprecated",
      "scope": ["invalid", "invalid.deprecated"],
      "settings": {
        "foreground": "#FF8C8C",
        "fontStyle": "underline"
      }
    },

    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#7A7B76" }
    },

    {
      "name": "Slang - Comments",
      "scope": [
        "comment.line.double-slash.slang",
        "comment.block.slang"
      ],
      "settings": { "foreground": "#7A7B76" }
    },
    {
      "name": "Slang - Strings",
      "scope": [
        "string.quoted.double.slang",
        "string.interpolated.slang",
        "string.unquoted.multi-line.slang"
      ],
      "settings": { "foreground": "#8AC88A" }
    },
    {
      "name": "Slang - Escape Characters",
      "scope": [
        "constant.character.escape.slang",
        "constant.character.escape.unicode.slang",
        "constant.character.escape.dollar.slang"
      ],
      "settings": { "foreground": "#6ACFF6" }
    },
    {
      "name": "Slang - String Interpolation Prefix",
      "scope": ["entity.name.function.interpolation.slang"],
      "settings": { "foreground": "#A7D8EE" }
    },
    {
      "name": "Slang - Interpolation Delimiters",
      "scope": [
        "punctuation.section.interpolation.slang",
        "punctuation.section.interpolation.begin.slang",
        "punctuation.section.interpolation.end.slang"
      ],
      "settings": { "foreground": "#F78A6B" }
    },
    {
      "name": "Slang - Multi-line String Delimiter",
      "scope": ["punctuation.definition.string.slang"],
      "settings": { "foreground": "#8AC88A" }
    },
    {
      "name": "Slang - Annotation Punctuation",
      "scope": ["punctuation.definition.annotation.slang"],
      "settings": { "foreground": "#B490AC" }
    },
    {
      "name": "Slang - Annotation Brackets",
      "scope": [
        "punctuation.section.annotation.begin.slang",
        "punctuation.section.annotation.end.slang"
      ],
      "settings": { "foreground": "#B490AC" }
    },
    {
      "name": "Slang - Annotation Modifier",
      "scope": ["storage.modifier.annotation.slang"],
      "settings": { "foreground": "#8899C9", "fontStyle": "italic bold" }
    },
    {
      "name": "Slang - Contract Keywords",
      "scope": ["keyword.other.contract.slang"],
      "settings": { "foreground": "#8899C9", "fontStyle": "bold" }
    },
    {
      "name": "Slang - Control Flow Keywords",
      "scope": ["keyword.control.slang"],
      "settings": { "foreground": "#906dae", "fontStyle": "bold" }
    },
    {
      "name": "Slang - Declaration Keywords",
      "scope": ["keyword.declaration.slang"],
      "settings": { "foreground": "#8899C9", "fontStyle": "bold" }
    },
    {
      "name": "Slang - Proof Keywords",
      "scope": ["keyword.other.proof.slang"],
      "settings": { "foreground": "#8899C9", "fontStyle": "bold" }
    },
    {
      "name": "Slang - Boolean & Null Literals",
      "scope": [
        "constant.language.boolean.slang",
        "constant.language.null.slang"
      ],
      "settings": { "foreground": "#7BC5F4" }
    },
    {
      "name": "Slang - Self References & Wildcard",
      "scope": [
        "variable.language.slang",
        "variable.language.wildcard.slang"
      ],
      "settings": { "foreground": "#B490AC" }
    },
    {
      "name": "Slang - Numeric Literals",
      "scope": [
        "constant.numeric.hex.slang",
        "constant.numeric.binary.slang",
        "constant.numeric.float.slang",
        "constant.numeric.integer.slang"
      ],
      "settings": { "foreground": "#6BC1F7" }
    },
    {
      "name": "Slang - Symbol Literals",
      "scope": ["constant.other.symbol.slang"],
      "settings": { "foreground": "#B490AC" }
    },
    {
      "name": "Slang - Structural Operators",
      "scope": [
        "keyword.operator.arrow.slang",
        "keyword.operator.turnstile.slang",
        "keyword.operator.quantifier.slang",
        "keyword.operator.range.slang",
        "keyword.operator.optional.slang"
      ],
      "settings": { "foreground": "#8899C9", "fontStyle": "bold" }
    },
    {
      "name": "Slang - JSON Literal Backtick",
      "scope": ["punctuation.definition.json-literal.slang"],
      "settings": { "foreground": "#6BC1F7" }
    },
    {
      "name": "Slang - Comparison & Diamond Operators",
      "scope": ["keyword.operator.comparison.slang"],
      "settings": { "foreground": "#dbd194" }
    },
    {
      "name": "Slang - Assignment Operator",
      "scope": ["keyword.operator.assignment.slang"],
      "settings": { "foreground": "#c1a4d9", "fontStyle": "bold" }
    },
    {
      "name": "Slang - Logical Operators",
      "scope": ["keyword.operator.logical.slang"],
      "settings": { "foreground": "#dbd194" }
    },
    {
      "name": "Slang - Arithmetic Operators",
      "scope": ["keyword.operator.arithmetic.slang"],
      "settings": { "foreground": "#dbd194" }
    },
